<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProvidePermissionActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_Text_Provide_Permission" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:fontFamily="sans-serif" android:textSize="30sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="@string/please_provide_the_permissions"
            android:lineSpacingExtra="10sp" android:textAlignment="center"
            android:textColor="@color/colorPrimary" android:typeface="normal"/>
</android.support.constraint.ConstraintLayout>