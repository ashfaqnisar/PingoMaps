<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.PermissionsActivity">

    <Button
            android:text="@string/provide_permissions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_But_Provide_Permissions"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textColor="@color/quantum_white_100"
            android:background="@drawable/shape" android:padding="20dp"/>
    <Button
            android:text="@string/open_navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_But_Open_Navigation_Drawer" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/id_But_Provide_Permissions"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:elevation="20dp"
            style="@android:style/Widget.Material.Light.Button" android:background="@drawable/shape"
            android:textColor="#FFFFFF" android:padding="20dp"/>
</android.support.constraint.ConstraintLayout>